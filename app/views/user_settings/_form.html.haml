%div{:style => 'width: 80%'}
  = form_for(user_settings_path) do |f|
    - if @user_setting.errors.any?
      #error_explanation
        %h2
          = pluralize(@user_setting.errors.count, 'error')
          prohibited this user_setting from being saved:
        %ul
          - @user_setting.errors.full_messages.each do |msg|
            %li= msg
    %div
      名前:
      = fields_for @user do |u|
        = u.text_field :nickname, :size => 30
    .actions
      = f.submit '保存する', :class => 'btn'

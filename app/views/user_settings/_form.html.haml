%div{:style => "width: 80%"}
  = form_for(@user_setting) do |f|
    - if @user_setting.errors.any?
      #error_explanation
        %h2
          = pluralize(@user_setting.errors.count, "error")
          prohibited this user_setting from being saved:
        %ul
          - @user_setting.errors.full_messages.each do |msg|
            %li= msg

    歩幅: #{f.text_field :step_dist, :size => 10} cm
    %br
    方向:
    = f.select :reverse_mode, reverse_mode_list
    %br
    %br
    %br
    .actions
      = f.submit '保存する', :class => 'button icon edit'
